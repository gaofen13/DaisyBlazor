@namespace DaisyBlazor
@inherits DaisyComponentBase

<pre data-prefix="@DataPrefix" class="@CodeClass" style="@Style" @attributes="@AdditionalAttributes">
    <code>
            @if (ChildContent is not null)
            {
                @ChildContent
            }
            else
            {
                @CodeText
            }
    </code>
</pre>
