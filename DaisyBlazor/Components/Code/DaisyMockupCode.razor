@namespace DaisyBlazor
@inherits DaisyComponentBase

<div class="mockup-code" style="@Style">
    <pre data-prefix="@DataPrefix" class="@PrefixClass">
    <code id="@Id" class="@Class" style="@Style">
            @if (ChildContent is not null)
            {
                @ChildContent
            }
            else
            {
                @CodeText
            }
    </code>
</pre>
</div>