@namespace DaisyBlazor
@inherits DaisyComponentBase

<li class="@SubClass" style="@Style" @attributes="@AdditionalAttributes">
    <span class="menu-sub-title" @onclick="@OnClickTilte">
        @if (TitleContent is not null)
        {
            @TitleContent
        }
        else
        {
            @Title
        }
    </span>
    @if (!Collapsed)
    {
        <ul class="@SubContentClass">
            <CascadingValue Value="@this" IsFixed>
                @ChildContent
            </CascadingValue>
        </ul>
    }
</li>