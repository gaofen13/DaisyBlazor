@namespace DaisyBlazor
@inherits DaisyComponentBase

<li @ref="@Element" id="@Id" style="@Style" class="@SubClass" @attributes="@Attributes">
    <span class="menu-sub-title" @onclick="@OnHandlerClickTilte">
        @if (TitleContent is not null)
        {
            @TitleContent
        }
        else
        {
            @Title
        }
    </span>
    <ul class="@SubContentClass">
        <CascadingValue Value="@this" IsFixed>
            @ChildContent
        </CascadingValue>
    </ul>
</li>