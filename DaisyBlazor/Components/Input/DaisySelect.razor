@namespace DaisyBlazor
@inherits DaisyInputBase<TValue>
@typeparam TValue

<CascadingValue Value="@this" IsFixed>
    @if (Multiple)
    {
        <InputSelect @ref="@Input" required="@Required" multiple="multiple" size="@Height" id="@Id" class="@SelectClass" style="@Style" @attributes="@Attributes" Value="@Value" ValueChanged="@ValueChanged" ValueExpression="@ValueExpression" name="@Name" placeholder="@Placeholder" disabled="@Disabled">
            @ChildContent
        </InputSelect>
    }
    else
    {
        <InputSelect @ref="@Input" required="@Required" id="@Id" class="@SelectClass" style="@Style" @attributes="@Attributes" Value="@Value" ValueChanged="@ValueChanged" ValueExpression="@ValueExpression" name="@Name" placeholder="@Placeholder" disabled="@Disabled">
            @ChildContent
        </InputSelect>
    }
</CascadingValue>