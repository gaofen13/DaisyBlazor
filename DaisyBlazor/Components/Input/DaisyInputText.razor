@namespace DaisyBlazor
@inherits DaisyInputBase<string>

<DaisyField Label="@Label" Required="@Required" Breakpoint="@Breakpoint" LabelColspan="@LabelColspan">
    <input @ref="@Element" type="@Type" required="@Required" pattern="@Pattern" maxlength="@MaxLength" id="@Id" class="@InputClass" style="@Style" @attributes="@AdditionalAttributes" name="@Name" autofocus="@AutoFocus" placeholder="@Placeholder" disabled="@Disabled" readonly="@Readonly" value="@CurrentValue" @onchange="@OnInputChanged" />
    @if (CascadedEditContext != null && !ValidationDisabled)
    {
        <ValidationMessage For="@ValueExpression" />
    }
</DaisyField>
