@namespace DaisyBlazor
@inherits DaisyComponentBase

<div class="@CollapseClass" style="@Style" @attributes="@AdditionalAttributes">
    <div class="collapse-title" @onclick="@OnClickTitleAsync">
        @if (TitleContent is not null)
        {
            @TitleContent
        }
        else
        {
            @Title
        }
    </div>
    <div class="collapse-content">
        @if (ChildContent is not null)
        {
            @ChildContent
        }
        else
        {
            @Message
        }
    </div>
</div>