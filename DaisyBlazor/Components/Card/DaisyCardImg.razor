@namespace DaisyBlazor
@inherits DaisyComponentBase

@if (!string.IsNullOrWhiteSpace(ImgSource))
{
    <figure>
        <img class="@Class" style="@Style" @attributes="@AdditionalAttributes" src="@ImgSource" alt="@ImgAlt" />
    </figure>
}

@code {
    [Parameter]
    public string? ImgSource { get; set; }

    [Parameter]
    public string? ImgAlt { get; set; }
}