@page "/button"

<DaisyFormField Label="Outline">
    <DaisyCheckbox Label="Outline" @bind-Value=@outline />
</DaisyFormField>
<DaisyFormField Label="按钮1Color">
    <DaisyRadioGroup @bind-Value=@color>
        <DaisyRadio Label="Primary" Value="Color.Primary" />
        <DaisyRadio Label="Secondary" Value="Color.Secondary" />
        <DaisyRadio Label="Accent" Value="Color.Accent" />
        <DaisyRadio Label="Ghost" Value="Color.Ghost" />
        <DaisyRadio Label="Link" Value="Color.Link" />
        <DaisyRadio Label="Info" Value="Color.Info" />
        <DaisyRadio Label="Success" Value="Color.Success" />
        <DaisyRadio Label="Warning" Value="Color.Warning" />
        <DaisyRadio Label="Error" Value="Color.Error" />
    </DaisyRadioGroup>
</DaisyFormField>

@code {
    bool outline;
    Color color;
}
