@page "/buttons"

<DaisyButtonGroup Vertical="@vertical">
    <DaisyButton Color="@color">按钮1</DaisyButton>
    <DaisyButton Color="@Color.Secondary">按钮2</DaisyButton>
    <DaisyButton Color="@Color.Accent">按钮3</DaisyButton>
</DaisyButtonGroup>

Vertical:
<DaisyCheckbox @bind-Value=@vertical />
按钮1Color:<DaisyRadioGroup @bind-Value=@color>
<RadioList>
    <DaisyRadio Value="Color.Primary" />
    <DaisyRadio Value="Color.Secondary" />
    <DaisyRadio Value="Color.Accent" />
    <DaisyRadio Value="Color.Ghost" />
    <DaisyRadio Value="Color.Link" />
    <DaisyRadio Value="Color.Info" />
    <DaisyRadio Value="Color.Success" />
    <DaisyRadio Value="Color.Warning" />
    <DaisyRadio Value="Color.Error" />
</RadioList>
</DaisyRadioGroup>

@code {
    bool vertical;
    Color color;
}
