@if (!string.IsNullOrEmpty(Title))
{
    <h5>@Title</h5>
}

@if (Description != null)
{
    <div class="demo-section-description">
        @Description
    </div>
}

@if (!string.IsNullOrEmpty(ExampleFile))
{
    <DaisyTabs>
        <DaisyTab Lifted Default Title="Preview">
            <DynamicComponent Type="@(Type.GetType($"DaisyBlazor.Shared.Pages.Examples.{ExampleFile}"))" />
        </DaisyTab>
        <DaisyTab Lifted Title="Code" Class="hljs-copy-wrapper">
            <DaisyMockupCode Class="hljs">
                @CodeContents
            </DaisyMockupCode>
            <button @ref="@_button" class="hljs-copy-button" data-copied="false" @onclick="@CopyCode">Copied!</button>
        </DaisyTab>
    </DaisyTabs>
}